ARG CROSS_BASE_IMAGE
FROM $CROSS_BASE_IMAGE

RUN apt-get update && apt-get install --assume-yes curl unzip

RUN curl -LO https://github.com/protocolbuffers/protobuf/releases/download/v21.12/protoc-21.12-linux-x86_64.zip
RUN unzip protoc-21.12-linux-x86_64.zip -d protoc
RUN mv ./protoc/bin/protoc /bin
RUN rm -rf protoc protoc-21.12-linux-x86_64.zip
